<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/grayblurrounded"
    android:orientation="vertical">


    <LinearLayout

        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:textAlignment="viewStart"
        android:weightSum="6">
        <TextView
            android:id="@+id/trainlist_departtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="20:20 am"
            android:layout_margin="5dp"
            android:textColor="@color/text"
            android:textSize="20dp"></TextView>


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trainlist_train_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="train no"
                    android:textColor="@color/text"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/trainlist_arrivale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="arraivale time"
                    android:visibility="gone"
                    android:textColor="@color/text"
                    android:textSize="14dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/trainlist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:text="train nameaaaaaaaaaa"
                android:textAlignment="viewStart"
                android:textColor="@color/text"
                android:textSize="18dp"

                />

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">


        <TextView
            android:id="@+id/trainlist_traval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="LNL-Pune"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/trainlist_trainlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="14dp"

            android:visibility="gone" />

        <TextView
            android:id="@+id/trainlist_trainlon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="14dp"

            android:visibility="gone" />

        <TextView
            android:id="@+id/trainlist_trainTostnlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="14dp"

            android:visibility="gone" />

        <TextView
            android:id="@+id/trainlist_trainTostnlon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="14dp"

            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>