<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flash_screen_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"


    android:orientation="vertical"

    tools:context="cityxpress.cbt.com.cityxpress.activitys.activity.FlashScreen">

    <ImageView
        android:id="@+id/flash_screen_logo_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/flash_screen_logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="City X-Press"
        android:textColor="@color/text"
        android:textSize="30dp"
        android:textStyle="bold"

        />
</LinearLayout>
